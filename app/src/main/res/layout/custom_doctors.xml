<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/linear_layout_c"
    android:clickable="true"
    android:layout_width="match_parent"
    android:background="@color/silver_expandle"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >


        <ImageView
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:background="@color/transparent"
            android:id="@+id/img_cover"
            android:src="@mipmap/doctor"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txt_title"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="@color/text_silver"
                android:text="@string/app_name"
                android:gravity="center|left"
                android:layout_toRightOf="@+id/img_cover"
                android:layout_toEndOf="@+id/img_cover" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver_fondo"/>

</LinearLayout>

