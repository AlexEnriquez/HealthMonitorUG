<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ls="http://schemas.android.com/tools"
    android:background="@color/silver_fondo"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="8dp"
        >


        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conoce tu Peso Ideal"
                android:textSize="20sp"
                android:textColor="@color/red2"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/silver_fondo"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="115dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="1dp"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="Peso: "
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/txt_peso"
                    android:layout_width="108dp"
                    android:layout_height="38dp"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:padding="1dp"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text=""
                    android:ellipsize="end"
                    />




            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="126dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="1dp"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="Altura: "
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/txt_altura"
                    android:layout_width="108dp"
                    android:layout_height="38dp"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:padding="1dp"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text=""
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="126dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="1dp"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="Sexo: "
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/txt_sexo"
                    android:layout_width="108dp"
                    android:layout_height="38dp"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:padding="1dp"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text=""
                    android:ellipsize="end"
                    />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:id="@+id/btBuscar"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Calcular"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.08">

                <TextView
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="1dp"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="Peso Ideal: "
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/txt_peso_ideal"
                    android:layout_width="246dp"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_mensaje"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:padding="1dp"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="Tienes una diferencia con tu Peso ideal de: "
                    android:visibility="invisible"
                    android:ellipsize="end"
                    android:textStyle="italic"
                    android:layout_weight="16.08" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="233dp"
                android:layout_height="66dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_diferencia"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:padding="1dp"
                    android:gravity="center_vertical|center"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text=""
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>


